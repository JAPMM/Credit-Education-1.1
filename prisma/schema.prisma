generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String?
  role      String   @default("user")
  createdAt DateTime @default(now())
  quizzes   QuizResult[]
}

model QuizQuestion {
  id        String   @id @default(uuid())
  question  String
  type      String // mcq, tf, etc.
  options   String // JSON stringified
  answer    String
  topic     String
  difficulty String
  explanation String?
  resource  String?
}

model QuizResult {
  id        String   @id @default(uuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  score     Int
  total     Int
  percentage Float
  takenAt   DateTime @default(now())
  details   String // JSON stringified for review and analytics
}

model AuditLog {
  id        String   @id @default(uuid())
  userId    String?
  action    String
  meta      String?
  timestamp DateTime @default(now())
}
